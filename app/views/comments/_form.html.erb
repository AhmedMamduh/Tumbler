<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	<%= f.label :name %> <br>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</p>
<br>

<p>
	<% if user_signed_in? %>
	<%= f.submit %>
	<% else %>
	<%= link_to "Please Login to add a comment", new_user_session_path %>
	<% end %>
</p>

<% end %>